                      , Run Com "/home/devarsh/.config/xmobar/trayer-padding-icon.sh" [] "trayerpad" 10 
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " <icon=Xmonad_Logo.xpm/> }{ %date%   | %trayerpad%"
       }

